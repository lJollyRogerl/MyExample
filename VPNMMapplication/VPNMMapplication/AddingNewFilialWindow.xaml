<Window x:Class="VPNMMapplication.AddingNewFilialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPNMMapplication"
        mc:Ignorable="d"
        Title="Добавление филлиала" Height="158.823" Width="280.147" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Icon="pics/ico.png">
    <StackPanel>
        <StackPanel x:Name="filialName" Orientation="Horizontal">
            <Label x:Name="lblFilialName" Content="Название филиала:" Margin="5" Width="120"/>
            <TextBox x:Name="txtFilialName" Width="120" Margin="10"/>
        </StackPanel>
        <StackPanel x:Name="ownerRegion" Orientation="Horizontal">
            <Label x:Name="lblOwnerRegion" Content="Регион филиала:" Margin="5" Width="120"/>
            <TextBox x:Name="txtOwnerRegion" Width="120" Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnCommit" Width="60" Height="30" Content="Ok" Margin="10" Click="btnCommit_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Width="60" Height="30" Content="Cancel" Margin="10" Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
